{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RedKeepers Steam Wrapper Placeholder",
  "version": "0.1.0",
  "identifier": "com.redkeepers.steamwrapper.placeholder",
  "build": {
    "frontendDist": "../../coordination/runtime/steam-tauri-wrapper/web-dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RedKeepers (Steam Wrapper Placeholder)",
        "width": 1600,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "shortDescription": "Temporary Steam wrapper package for RedKeepers first vertical slice.",
    "longDescription": "Placeholder Tauri desktop wrapper around packaged web vertical-slice artifact. Steamworks and final storefront assets are deferred."
  }
}
